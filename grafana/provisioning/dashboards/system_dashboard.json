{
  "uid": "postgresql-dashboard",
  "title": "PostgreSQL - Vue Générale",
  "schemaVersion": 25,
  "version": 1,
  "refresh": "10s",
  "panels": [
    {
      "type": "graph",
      "title": "Nombre de connexions",
      "id": 1,
      "targets": [
        {
          "expr": "pg_stat_activity_count",
          "legendFormat": "Connexions",
          "interval": "",
          "refId": "A"
        }
      ]
    },
    {
      "type": "graph",
      "title": "Transactions par seconde",
      "id": 2,
      "targets": [
        {
          "expr": "rate(pg_stat_database_xact_commit[1m]) + rate(pg_stat_database_xact_rollback[1m])",
          "legendFormat": "Tx/s",
          "refId": "A"
        }
      ]
    },
    {
      "type": "graph",
      "title": "Locks actifs",
      "id": 3,
      "targets": [
        {
          "expr": "pg_locks_count",
          "legendFormat": "Locks",
          "refId": "A"
        }
      ]
    },
    {
      "type": "graph",
      "title": "Temps moyen d’exécution des requêtes (s)",
      "id": 4,
      "targets": [
        {
          "expr": "rate(pg_stat_statements_total_time[1m]) / rate(pg_stat_statements_calls[1m])",
          "legendFormat": "Avg Query Time",
          "refId": "A"
        }
      ]
    },
    {
      "type": "graph",
      "title": "Taille de la base (Mo)",
      "id": 5,
      "targets": [
        {
          "expr": "pg_database_size_bytes / 1024 / 1024",
          "legendFormat": "DB Size",
          "refId": "A"
        }
      ]
    }
  ]
}
